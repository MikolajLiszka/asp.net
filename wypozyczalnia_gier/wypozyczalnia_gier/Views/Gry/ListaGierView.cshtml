@model IEnumerable<wypozyczalnia_gier.Models.Gra>

@{
    ViewData["Title"] = "ListaGierView";
}

<h1>Lista gier</h1>

<p>
    <a asp-action="Add">Dodaj nową grę</a> |
</p>
<p>
    <a asp-action="Index">Powrót</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TytulGry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KategoriaGry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeweloperGry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PEGI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CenaWypozyczeniaGry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TytulGry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriaGry.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeweloperGry.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PEGI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CenaWypozyczeniaGry)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
