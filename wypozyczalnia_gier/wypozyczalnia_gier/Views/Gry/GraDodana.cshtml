@model ICollection<wypozyczalnia_gier.Models.Gra>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Liczba gier: @Model.Count</h1>
<table>
    <thead>
        <tr>
            <th>
                Numer indeksu
            </th>
            <th>
                Kategoria
            </th>
            <th>
                Poziom trudności
            </th>
            <th>
                Cena wypożyczenia
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var gra in @Model)
            {
        <tr>
            <td>
                @gra.Id
            </td>
            <td>
                @gra.TytulGry
            </td>
            <td>
                @gra.KategoriaGry
            </td>
            <td>
                @gra.PoziomTrudnosciGry
            </td>
            <td>
                @gra.CenaWypozyczeniaGry
            </td>
            <td>
                <a class="btn btn-primary" 
                   asp-controller="Gry" 
                   asp-action="Edit" 
                   asp-route-id="@gra.Id">Edytuj</a>
                <a class="btn btn-primary"
                   asp-controller="Gry" 
                   asp-action="Delete" 
                   asp-route-id="@gra.Id">Usuń</a>
                <a class="btn btn-primary">Szczegóły</a>
            </td>
        </tr>
            }
    <a class="btn btn-primary" asp-action="Add" asp-controller="Gry">Dodaj grę</a>
    </tbody>
</table>
